<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">


    <Button
        android:id="@+id/button_pale_map"
        style="@android:style/Widget.Material.Light.Button.Borderless"
        android:layout_width="139dp"
        android:layout_height="278dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/light_theme"
        android:text="Pale"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_dark_map"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button_original_map" />

    <Button
        android:id="@+id/button_dark_map"
        style="@android:style/Widget.Material.Light.Button.Borderless"
        android:layout_width="138dp"
        android:layout_height="278dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/dark_theme"
        android:text="DARK"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_view_originalCoins"
        style="@android:style/Widget.Material.Light.Button.Borderless"
        android:layout_width="207dp"
        android:layout_height="102dp"
        android:layout_marginTop="8dp"
        android:background="@color/achieved"
        android:text="ORIGINAL"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/button_view_paleCoins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_view_paleCoins"
        style="@android:style/Widget.Material.Light.Button.Borderless"
        android:layout_width="207dp"
        android:layout_height="101dp"
        android:layout_marginBottom="320dp"
        android:background="@color/colorPrimary"
        android:text="Pale"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_view_partyCoins"
        style="@android:style/Widget.Material.Light.Button.Borderless"
        android:layout_width="204dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="296dp"
        android:background="@color/colorAccent"
        android:text="Party"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.874" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:capitalize="characters"
        android:text="Coin Colours"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/button_view_darkCoins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="260dp"
        android:capitalize="characters"
        android:text="Map Style"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_view_paleCoins"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="SHOP"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_view_darkCoins"
        style="@android:style/Widget.Material.Light.Button.Borderless"
        android:layout_width="211dp"
        android:layout_height="103dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/mapbox_blue"
        android:text="Dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/button_view_partyCoins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintStart_toEndOf="@+id/button_view_originalCoins" />

    <Button
        android:id="@+id/button_original_map"
        style="@android:style/Widget.Material.Light.Button.Borderless"
        android:layout_width="134dp"
        android:layout_height="278dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/original_theme"
        android:text="Original"
        android:textColor="@color/cardview_dark_background"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_dark_map"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>